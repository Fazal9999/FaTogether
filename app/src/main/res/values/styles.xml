<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!--"@style/Theme.AppCompat.Light.NoActionBar"-->
        <!--"Theme.AppCompat.Light.DarkActionBar"-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/ripplecolor</item>
        <item name="android:statusBarColor">@color/white_color</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white_color</item>
        <item name="colorControlHighlight">@color/ripplecolor</item>
        <item name="android:statusBarColor">@color/white_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--Switch style-->
    <style name="switch_colors" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--Button style-->
    <style name="app_button" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/ripple_btn</item>
        <item name="android:textSize">@dimen/btn_txt_size</item>
        <item name="android:padding">@dimen/btn_padding</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:layout_height">@dimen/btn_height</item>
    </style>
    <!--Edit Text style-->
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/edt_txt_size</item>
        <item name="android:padding">@dimen/edt_padding</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_height">@dimen/edt_min_height</item>
        <item name="android:background">@drawable/edittext_bg_selector</item>

    </style>

    <style name="CustomInputTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/shape_rect_gray_border</item>
    </style>

    <!--Bold label style-->
    <style name="row_bold_style" parent="AppTheme">
        <item name="android:textSize">16dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--Sub label style-->
    <style name="row_sub_style" parent="AppTheme">
        <item name="android:textSize">15dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">@color/label_color</item>
    </style>

    <style name="label_large_txt_style" parent="AppTheme">
        <item name="android:textSize">@dimen/lab_large_txt_size</item>
        <item name="android:padding">@dimen/lab_large_txt_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/hint_color</item>

    </style>

    <style name="label_medium_txt_style" parent="AppTheme">
        <item name="android:textSize">@dimen/lab_med_txt_size</item>
        <item name="android:padding">@dimen/lab_med_txt_padding</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="label_small_txt_style" parent="AppTheme">
        <item name="android:textSize">@dimen/lab_small_txt_size</item>
        <item name="android:padding">@dimen/lab_small_txt_padding</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="UserDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>

    </style>

    <style name="UserBottomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:layout_marginBottom">56dp</item>
        <item name="android:layout_gravity">right|bottom</item>

    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomDialogNew" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="CustomDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MediaButton">
        <item name="background">@null</item>
        <item name="android:layout_width">71dip</item>
        <item name="android:layout_height">52dip</item>
    </style>


    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>
    <style name="ServiceTextShadow">
        <item name="android:shadowColor">#55000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10.0</item>
    </style>
</resources>
