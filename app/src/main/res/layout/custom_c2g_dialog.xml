<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white_color" android:padding="4dp">

        <ImageView
            android:id="@+id/dialog_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/Grey_400"
            android:src="@drawable/ic_user_default_icon"/>

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/dialog_pic"
        android:layout_marginStart="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/dialog_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/dialog_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect_light_gray_border"
            android:text="Message"
            android:textAlignment="center"
            android:paddingTop="6dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:textColor="@color/white_color" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_interest"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:textAlignment="center"
        android:layout_below="@+id/dialog_pic"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/dialog_bio"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_below="@+id/dialog_interest"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <View
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:background="@color/transparent"
        android:layout_below="@id/dialog_bio"/>

</RelativeLayout>