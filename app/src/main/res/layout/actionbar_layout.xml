<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actionbar_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color">

    <RelativeLayout
        android:id="@+id/main_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp">

        <ImageView
            android:id="@+id/main_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_search_nav"/>

        <ImageView
            android:id="@+id/main_previous"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@+id/main_home"
            android:src="@drawable/ic_back_nav"/>

        <ImageView
            android:id="@+id/main_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/main_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/main_home"
            android:src="@drawable/ic_next_nav" />

        <ImageView
            android:id="@+id/main_filter"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_filter_act"/>
    </RelativeLayout>

    <View
        android:layout_below="@id/main_bar"
        android:background="@color/Grey_400"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>