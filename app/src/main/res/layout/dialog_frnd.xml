<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_dialog_design"
        android:orientation="vertical">
        <TextView
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Report user"
            android:id="@+id/tv_report_user"
            android:textAlignment="center"
            android:textColor="#1275ed"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>
        <TextView
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Block user"
            android:id="@+id/tv_block_user"
            android:textAlignment="center"
            android:textColor="#1275ed"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>

        <TextView
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/tv_offensive_content"
            android:text="Offensive or inapporopriate content"
            android:textAlignment="center"
            android:textColor="#1275ed"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_dialog_design">
        <TextView
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Cancel"
            android:id="@+id/tvCancel"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#1275ed"/>
    </LinearLayout>


</LinearLayout>