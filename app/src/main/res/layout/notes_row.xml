<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:elevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:paddingBottom="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/profile_img"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <com.kptech.peps.customview.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:padding="1dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                app:textFont="@string/font_bold"/>
            <com.kptech.peps.customview.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/line1"
                android:textSize="15dp"
                android:textColor="@color/text_color"

                />
            <com.kptech.peps.customview.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/line2"
                style="@style/label_small_txt_style"
                android:padding="1dp"
                android:textColor="@color/text_color"
                />


        </LinearLayout>
        <ImageView
            android:id="@+id/post_menu_icon"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="5.5dp"
            android:layout_marginRight="-5dp"
            android:src="@drawable/menu_icon" />

    </LinearLayout>


    <com.kptech.peps.customview.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notes_description"
        android:textColor="@color/text_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:text="N/A"
        />
    <ImageView
        android:id="@+id/ic_comments"
        android:layout_width="30dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_message"></ImageView>
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/light_gray"></View>
</LinearLayout>