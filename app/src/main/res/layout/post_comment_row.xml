<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Grey_200"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/user_demo_dp" />

        <com.kptech.peps.customview.CustomFontTextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/user_img"
            android:singleLine="true"
            android:text="@string/facebook_app_id"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:textFont="@string/font_bold" />

        <TextView
            android:id="@+id/posted_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@id/post_menu_icon"
            android:layout_alignParentEnd="true"
            android:textColor="@color/light_black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/post_menu_icon"
            android:layout_width="20dp"
            android:paddingBottom="10dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/menu_icon" />

    </RelativeLayout>

    <com.kptech.peps.customview.CustomFontTextView
        android:id="@+id/post_user_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="40dp"
        android:text="@string/facebook_app_id"
        android:textColor="@color/text_color"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/comment_posted_pic"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginTop="4dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="10dp"
        android:background="@color/row_line_color"/>

</LinearLayout>